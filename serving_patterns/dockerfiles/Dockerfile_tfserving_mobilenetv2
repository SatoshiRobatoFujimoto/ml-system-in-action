FROM tensorflow/tensorflow:2.2.0 as builder

ENV PROJECT_DIR serving_patterns
WORKDIR /${PROJECT_DIR}
ADD requirements/requirements_api_tf2.txt /${PROJECT_DIR}/
RUN apt-get -y update && \
    apt-get -y install apt-utils gcc curl && \
    pip install  --no-cache-dir -r requirements_api_tf2.txt

COPY ./src/app/ml/ /${PROJECT_DIR}/src/app/ml/
COPY ./src/app/constants.py /${PROJECT_DIR}/src/app/constants.py
COPY ./src/configurations/ /${PROJECT_DIR}/src/configurations/
COPY ./scripts/run_extract_mobilenetv2.sh /${PROJECT_DIR}/run_extract_mobilenetv2.sh
RUN chmod +x run_extract_mobilenetv2.sh && \
    ./run_extract_mobilenetv2.sh


FROM tensorflow/serving:2.2.0

ENV MODEL_BASE_PATH=/models/mobilenetv2
ENV MODEL_NAME=mobilenetv2

COPY --from=builder /serving_patterns/models/savedmodel/mobilenetv2 ${MODEL_BASE_PATH}
EXPOSE 8500
EXPOSE 8501

COPY ./scripts/tf_serving_entrypoint.sh /usr/bin/tf_serving_entrypoint.sh
RUN chmod +x /usr/bin/tf_serving_entrypoint.sh
ENTRYPOINT ["/usr/bin/tf_serving_entrypoint.sh"]